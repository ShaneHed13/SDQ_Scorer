<!DOCTYPE html>
    <html lang="en">
        
        <head>
            <title>DB Info</title>
            <meta charset="UTF-8">
        </head>
        
        <body>
            <a href="/">Return to Homepage</a>
            <h1>Strengths and Difficulties Questionnaire: P or T 4-10</h1>

            <label>Child's Name: </label><input type="text">&nbsp;&nbsp;&nbsp;
            <label>Date of Birth: </label><input type="text">
            
            <br><br>
            
            <table>
                <tr>
                    <th>Num.</th>
                    <th>Question</th>
                    <th>Not True</th>
                    <th>Somewhat True</th>
                    <th>Always True</th>
                </tr>  
                
                <% sdqTests.forEach(function(r) { %>
                <tr>
                    <td><%= r.id %></td>
                    <td><%= r.sdq410pt %></td>
                    <td><input type="radio" name="<%= r.id %>"><%= r.never %></td>
                    <td><input type="radio" name="<%= r.id %>"><%= r.sometimes %></td><td><input type="radio" name="<%= r.id %>"><%= r.always %></td>
                </tr>
                <% }); %>   
                
            </table>
            
            <br><br>
            
            <label>Completed By: </label><input type="text"> &nbsp;&nbsp;&nbsp;
            <label>Date Completed: </label><input type="text">
            
            <br><br>
            
            <table>
                <tr>
                    <td>
                        <tr>Parent<input type="radio" name="cb"></tr>
                        <tr>Teacher<input type="radio" name="cb"></tr>
                    </td>
                </tr>
            </table>
            
            <br>
            
            <button type="submit">Submit</button>
            
        </body>

    </html>